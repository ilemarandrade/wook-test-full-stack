{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "standard-with-typescript",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "prettier/prettier": "warn"
  },
  "ignorePatterns": ["dist", "node_modules", "*.cjs"]
}
