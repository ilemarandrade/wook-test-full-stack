FROM node:20-alpine

WORKDIR /usr/src/app

# Instalar dependencias para el frontend en modo dev (Vite)
COPY package*.json ./
RUN npm ci

# El c√≥digo fuente se monta como volumen desde el host

EXPOSE 5173

# En docker-compose.yml ya se sobreescribe el comando con npm run dev -- --host ...
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]

